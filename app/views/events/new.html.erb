
<head>
    <meta charset="utf-8" />
    <title>DateTimePicker example</title>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
  

        <h1 class="text-center">Cree un Evenement</h1>

<div class="modal-dialog " role="document" >
  <div class="modal-content rounded-2 shadow p-3 mb-2 bg-transparent  text-center"  style='height : 50%;'>
    <div class="modal-header p-5 pb-4 justify-content-center border-bottom-0">
        <!-- <h5 class="modal-title">Modal title</h5> -->
      <h2 class="fw-bold mb-0 text-center"></h2>
        
      
    <form action= <%= events_path %> method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <div class="form-floating mb-4">
        <label for="Form-pass3 text-center">Titre de ton Evenement</label>
        <input type="text" id="title" name="title" class="form-control rounded-4" value="<%= @title %>" required>
      </div>
        

      <div  class="form-floating mb-4">
        <input id="input" width="312" id="start_date" name="start_date" class="form-control rounded-4" value="<%= @start_date %>" required/>
         <script>
        $('#input').datetimepicker({ footer: true, modal: true });
         </script>
       </div>
      <div class="form-floating mb-4">
        <label for="Form-pass3 text-center">Combien de temps ?</label>
        <input type="text" id="duration" name="duration" class="form-control rounded-4" value="<%= @duration %>" required>
      </div>

      <div  class="form-floating mb-4">
        <label for="Form-pass3 text-center"> Description </label>
        <textarea type="text" id="description" name="description" rows="2" class="form-control rounded-4"  required><%= @description %></textarea>
      </div>
    

      <div  class="form-floating mb-4">
        <label for="Form-pass3 text-center">Localisation </label>
        <input type="text" id="gossip_title" name="gossip_title" class="form-control rounded-4" value="<%= @location %>" required>
      </div>
        
      <div  class="form-floating mb-4">
        <label for="Form-pass3 text-center">Prix </label>
        <input type="text" id="price" name="price" class="form-control rounded-4" value="<%= @price %>" required>
      </div>
        
      <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">  Envoie </button>
 

    </form>  
    </div>
  </div>
</div>
 
